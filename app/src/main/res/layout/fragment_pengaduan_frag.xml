<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengaduanFragment.Pengaduan_Frag"
    android:background="@drawable/gradient_color">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Pelanggan"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"
                    />

                <TextView
                    android:id="@+id/noPell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Pelanggan"
                    android:textColor="@color/colorGrey"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pelanggan"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"
                    />

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pelanggan"
                    android:textColor="@color/colorGrey"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pelanggan"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/txtAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pelanggan"
                    android:textColor="@color/colorGrey"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP Pelanggan"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/txtNoHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP Pelanggan"
                    android:textColor="@color/colorGrey"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masukkan Keluhan"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_margin="8dp"/>

                <EditText
                    android:id="@+id/isiKeluhan"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="Masukkan Keluhan..."/>

            </LinearLayout>

            <Button
                android:id="@+id/btnKeluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Kirim"
                android:textColor="@color/colorWhite"

                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>