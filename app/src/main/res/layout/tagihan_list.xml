<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulan Tagihan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/txtBulanBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulan Tagihan"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Std. Awal"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/stdAwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Std. Awal"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Std. Akhir"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/stdAkhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:text="Std. Akhir"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya Air"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/biayaAir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Air"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denda"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/txtDenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Denda"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya Segel"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/biayaSegel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biaya Segel"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angsuran Air"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/angsAir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angsuran Air"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angsuran Non Air"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/angsNon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angsuran Non Air"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Tagihan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/totTagihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Tagihan"
                android:textColor="@color/colorGrey"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Bayar"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/statusBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Bayar"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pembayaran"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/tglBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pembayaran"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>