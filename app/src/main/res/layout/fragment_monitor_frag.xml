<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengaduanFragment.Monitor_Frag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Pelanggan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/noPell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Pelanggan"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pelanggan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/txtAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Pelanggan"
                android:textColor="@color/colorGrey"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Keluhan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/isiKeluhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/lorem_ipsum"/>

                </ScrollView>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggapan Keluhan"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="8dp"
                android:layout_margin="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/isiTanggapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/lorem_ipsum"/>

                </ScrollView>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>